<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.Nav_Flyout.MainPage"
             xmlns:local="clr-namespace:Demo.Nav_Flyout"
             Title="Menu">

    <FlyoutPage.Flyout>
        <local:FlyoutMenuPage x:Name="flyout"/>
    </FlyoutPage.Flyout>

    
    <FlyoutPage.Detail>
            <NavigationPage>
                <x:Arguments>
                    <local:HomePage/>
                </x:Arguments>
            </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
