                                            <control:SfCircularGauge Margin="10" HeightRequest="250" WidthRequest="250" HorizontalOptions="CenterAndExpand" Grid.Row="0" VerticalOptions="Center">
                                                <control:SfCircularGauge.Scales>
                                                    <control:Scale StartValue="0" EndValue="100">
                                                        <control:Scale.Ranges>
                                                            <control:Range StartValue="0" EndValue="70" Color="red"/>
                                                            <control:Range StartValue="70" EndValue="85" Color="Orange"/>
                                                            <control:Range StartValue="85" EndValue="100" Color="Green"/>
                                                        </control:Scale.Ranges>
                                                        <control:Scale.Pointers>
                                                            <control:NeedlePointer Value="{Binding makverim}"/>
                                                        </control:Scale.Pointers>
                                                    </control:Scale>
                                                </control:SfCircularGauge.Scales>
                                                <control:SfCircularGauge.Headers>
