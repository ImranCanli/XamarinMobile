                                                </control:Scale.Ranges>
                                                <control:Scale.Pointers>
                                                    <control:NeedlePointer Value="{Binding fverim}"/>
                                                </control:Scale.Pointers>
                                            </control:Scale>
                                        </control:SfCircularGauge.Scales>
                                        <control:SfCircularGauge.Headers>
                                            <control:Header Text="F. Verim" TextSize="15" ForegroundColor="DarkGray"/>
                                        </control:SfCircularGauge.Headers>
                                    </control:SfCircularGauge>

