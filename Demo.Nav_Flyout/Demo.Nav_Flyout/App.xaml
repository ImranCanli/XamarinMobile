<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo.Nav_Flyout.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="MainColor">#f87c1d</Color>
            <Color x:Key="SecondaryColor">#f87c1d</Color>
            <Color x:Key="PrimaryColor">#f87c1d</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#f87c1d" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>